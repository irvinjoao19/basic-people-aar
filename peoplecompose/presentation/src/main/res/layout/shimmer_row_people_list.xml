<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_people_shimmer"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_margin="@dimen/margin_16"
        android:background="@drawable/background_circle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_full_name_shimmer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_16"
        android:background="@color/enalta_onsurface_050"
        app:layout_constraintBottom_toTopOf="@+id/tv_email_shimmer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/iv_people_shimmer"
        app:layout_constraintTop_toTopOf="@+id/iv_people_shimmer" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_email_shimmer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_16"
        android:background="@color/enalta_onsurface_050"
        app:layout_constraintBottom_toBottomOf="@+id/iv_people_shimmer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/iv_people_shimmer"
        app:layout_constraintTop_toBottomOf="@+id/tv_full_name_shimmer"
        app:layout_constraintVertical_chainStyle="packed" />

    <View
        android:id="@+id/preferencesCcmSeparatorView_shimmer"
        android:layout_width="0dp"
        android:layout_height="@dimen/size_1"
        android:layout_marginHorizontal="@dimen/margin_16"
        android:background="@color/onsurface_100"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>